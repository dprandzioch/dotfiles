# Enable kwm compatibility mode
khd kwm on

# set color of default mode
khd mode default color 0xFF7CAFC2

# Enable the prefix mode
khd mode prefix prefix on
khd mode prefix timeout 0.75
khd mode prefix restore default
khd mode prefix color 0xFF458588

# Activate prefix mode
ctrl - s                 :    /usr/local/bin/khd -e "mode activate prefix"

# Quit Kwm
cmd + alt + ctrl - q     :    /usr/local/bin/kwmc quit

# Launch iTerm2
cmd - return             :    open -na /Applications/iTerm2.app
shift + cmd - return     :    open -na /Applications/Firefox.app
cmd - g                  :    osascript ~/bin/goto_server.scpt

# Give Focus To Window
ctrl + alt - left         :    /usr/local/bin/kwmc window -f west
ctrl + alt - right        :    /usr/local/bin/kwmc window -f east
ctrl + alt - down         :    /usr/local/bin/kwmc window -f south
ctrl + alt - up           :    /usr/local/bin/kwmc window -f north

# Give focus to next/last window
ctrl + alt - n            :    /usr/local/bin/kwmc window -fm prev
ctrl + alt - m            :    /usr/local/bin/kwmc window -fm next

# Give Focus To Screen
ctrl + alt - 1            :    /usr/local/bin/kwmc display -f 0
ctrl + alt - 2            :    /usr/local/bin/kwmc display -f 1
ctrl + alt - 3            :    /usr/local/bin/kwmc display -f 2

# Swap Focused Window
ctrl + alt + cmd - left  :    /usr/local/bin/kwmc window -s west
ctrl + alt + cmd - down  :    /usr/local/bin/kwmc window -s south
ctrl + alt + cmd - up    :    /usr/local/bin/kwmc window -s north
ctrl + alt + cmd - right :    /usr/local/bin/kwmc window -s east

# expand window
ctrl + alt + cmd - h               :    /usr/local/bin/kwmc window -c expand 0.05 west
ctrl + alt + cmd - j               :    /usr/local/bin/kwmc window -c expand 0.05 south
ctrl + alt + cmd - k               :    /usr/local/bin/kwmc window -c expand 0.05 north
ctrl + alt + cmd - l               :    /usr/local/bin/kwmc window -c expand 0.05 east

# Move window between displays
ctrl + alt + cmd - m     :    /usr/local/bin/kwmc window -m display next
ctrl + alt + cmd - n     :    /usr/local/bin/kwmc window -m display prev

# reload khd
ctrl + alt - r           :    /usr/local/bin/khd -e "reload"

# Set Space Tiling Mode To BSP
cmd + ctrl - a           :    /usr/local/bin/kwmc space -t bsp

# Rotate Window-Tree By 90degrees (Clockwise)
ctrl + alt + cmd - r     :    /usr/local/bin/kwmc tree rotate 90

# Set Temporary Window Container
ctrl + alt + cmd - f     :    /usr/local/bin/kwmc window -z fullscreen
ctrl + alt + cmd - space :    /usr/local/bin/kwmc window -t focused

#
########## GENERAL ##########
#

# reload config
cmd + alt + ctrl - r : khd -e "reload"

# open terminal, blazingly fast compared to iTerm/Hyper
cmd - return : open -na /Applications/iTerm.app
shift + cmd - return : open -na /Applications/Firefox.app


#
########## WINDOWS ##########
#

# Focus next/prev window
alt - a : chunkc tiling::window --focus west
alt - d : chunkc tiling::window --focus east
alt - w : chunkc tiling::window --focus north
alt - s : chunkc tiling::window --focus south

# move window
shift + alt - a : chunkc tiling::window --warp west
shift + alt - s : chunkc tiling::window --warp south
shift + alt - w : chunkc tiling::window --warp north
shift + alt - d : chunkc tiling::window --warp east

# increase region size
ctrl + alt - a : chunkc tiling::window --use-temporary-ratio 0.1 --adjust-window-edge west
ctrl + alt - s : chunkc tiling::window --use-temporary-ratio 0.1 --adjust-window-edge south
ctrl + alt - w : chunkc tiling::window --use-temporary-ratio 0.1 --adjust-window-edge north
ctrl + alt - d : chunkc tiling::window --use-temporary-ratio 0.1 --adjust-window-edge east

# rotate tree
alt - r : chunkc tiling::desktop --rotate 90

# toggle window fullscreen
alt - f : chunkc tiling::window --toggle fullscreen

# toggle sticky, float and resize to picture-in-picture size
alt - p : chunkc tiling::window --toggle sticky;\
          chunkc tiling::window --warp-floating pip-right


#
########## MONITORS ##########
#

# focus monitor
alt - y  : chunkc tiling::monitor -f prev
alt - c  : chunkc tiling::monitor -f next

# send window to monitor and follow focus
shift + alt - y  : chunkc tiling::window --send-to-monitor prev; chunkc tiling::monitor -f prev
shift + alt - c  : chunkc tiling::window --send-to-monitor next; chunkc tiling::monitor -f next

